<mapper namespace="com.aloha.todo.mapper.TodoMapper">
    <select id="list" resultType="Todo">
        SELECT *
        FROM todo
        ORDER BY status
                ,no DESC
    </select>
    <select id="select" resultType="Todo">
        SELECT *
        FROM todo
        WHERE no = #{no}
    </select>

    <!-- ë“±ë¡ -->
    <!-- 
        ðŸŽˆ useGeneratedKeys
        : AUTO_INCREMENT ëœ ê°’ì„ KeyProperty ì— ì§€ì •í•œ ë³€ìˆ˜ì— ìžë™ìœ¼ë¡œ ë‹´ì•„ì¤€ë‹¤.
     -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="no">
    <!-- <insert id="insert">
        <selectKey keyProperty="no" resultType="int" order="AFTER">
            SELECT LIST_INSERT_ID() FROM dual
        </selectKey> -->

        INSERT INTO todo (name, status)
        VALUES(#{name}, #{status})
    </insert>

    <update id="update">
        UPDATE todo
        SET name = #{name}
           ,status = #{status}
           ,upd_date = now()
        WHERE no = #{no}      
    </update>

    <delete id="delete">
        DELETE FROM todo
        WHERE no = #{no} 
    </delete>

    <delete id="deleteAll">
        DELETE FROM todo 
    </delete>
    
    <update id="clearAll">
        UPDATE todo
        SET status = CASE 
        WHEN status = 0 THEN 1
        ELSE status
        END;
    </update>

</mapper>